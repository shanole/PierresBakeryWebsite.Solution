@using PierresBakeryWebsite.Models;

<h1>List of Vendors</h1>

@if (@Model.Count == 0)
{
  <h3>You do not have any vendors yet.</h3>
} 

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='vendors/new'>Add another vendor</a></p>
<p><a href='/'>Back home</a></p>